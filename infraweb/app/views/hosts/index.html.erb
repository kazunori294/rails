<div class="box">
<table class="pure-table pure-table-horizontal">
	
	<thead>
		<tr>
			<th>ID</th>
			<th>Hostname</th>
			<th>IP Address</th>
			<th>Comment</th>
			<th>Last Update</th>
		</tr>
	</thead>

	<tbody>
		<% @hosts.each do |host| %>
		<tr>
			<th><%= host.id %></th>
                        <th><%= host.hostname %></th>
                        <th><%= host.ipaddress %></th>
			<th><%= host.comment %></th>
		        <th><%= host.updated_at %></th>
		</tr>
		<% end %>
	</tbody>


</table>
</div>
